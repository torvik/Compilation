<h1>Listing products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Status</th>
      <th>Technology</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.nome %></td>
        <td><%= product.status %></td>
        <td><%= product.technology %></td>
        <td><%= product.sources.map { |c| c.nome}.join(' | ') %> </td>
        <td><%= link_to 'Show', product, class: "btn btn-primary btn-sm"  %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary btn-sm"  %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && current_user.admin? %>
<%= link_to 'New Product', new_product_path %>
<% end %>
