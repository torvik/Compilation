<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
    <%= f.label :data_solicitacao %>
    <%= f.date_select :data_solicitacao, class: "form-control" %>
  </div>
<div class="form-group">
    <%= f.label :data_pre %>
    <%= f.date_select :data_pre , class: "form-control" %>
  </div>
<div class="form-group">
    <%= f.label :data_pro %>
    <%= f.date_select :data_pro , class: "form-control" %>
  </div>
<div class="form-group">
    <%= f.label :status %>
    <%= f.text_field :status , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :data_alteracao %>
    <%= f.date_select :data_alteracao , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :recompilado %>
    <%= f.check_box :recompilado %>
  </div>
  <div class="form-group">
    <%= f.label :observation %>
    <%= f.text_area :observation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :environment %>
    <%= f.select :environment, options_for_select([["Escolha o Ambiente"],["DESENVOLVIMENTO"], ["PRE PRODUÇAO"], ["PRODUÇAO"]]) , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :oficializar %>
    <%= f.check_box :oficializar %>
  </div>
  <div class="form-group">
    <%= f.label :data_oficializacao %>
    <%= f.date_select :data_oficializacao , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :project_id %>
    <%= f.collection_select(:project_id, Project.all, :id, :nome) %>
  </div>


  <div class="form-group">
    <%= f.label :source_id %><br>
    <%= collection_check_boxes(:request, :source_ids, @sources, :id, :nome) %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
